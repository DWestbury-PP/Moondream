# Environment Configuration

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Camera Configuration  
CAMERA_TYPE=mac_studio  # mac_studio, jetson, usb
CAMERA_INDEX=0
CAMERA_WIDTH=1920
CAMERA_HEIGHT=1080
CAMERA_FPS=30

# YOLO Configuration
YOLO_MODEL=yolo11n.pt
YOLO_CONFIDENCE=0.5
YOLO_DEVICE=mps  # mps for Apple Silicon, cuda, cpu

# Moondream Configuration
MOONDREAM_MODEL=vikhyatk/moondream2
MOONDREAM_DEVICE=mps
MOONDREAM_INSTANCES=2
MOONDREAM_BATCH_SIZE=1

# Pipeline Configuration
VLM_FRAME_STRIDE=10  # Process every Nth frame with VLM
YOLO_FRAME_STRIDE=1  # Process every Nth frame with YOLO
ENABLE_SCENE_CHANGE_DETECTION=true
SCENE_CHANGE_THRESHOLD=0.3

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
WEBSOCKET_PORT=8001

# Frontend Configuration
FRONTEND_PORT=3000
API_BASE_URL=http://localhost:8000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json  # json or text

# Performance Configuration
MAX_QUEUE_SIZE=10
UI_RING_BUFFER_SIZE=3
ENABLE_PERFORMANCE_METRICS=true

# Docker Configuration
COMPOSE_PROJECT_NAME=moondream-vision
